@model DeleteTradeViewModel
@{
    ViewData["Title"] = "Delete a trade";
}

<h2>Are you sure you want to delete this trade?</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="TradePair">Traded pair</label>
                <select asp-for="TradePair" asp-items="Html.GetEnumSelectList<TradedPair>()" disabled class="form-control"></select>
                <span asp-validation-for="TradePair" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderType">Order type</label>
                <select asp-for="OrderType" asp-items="Html.GetEnumSelectList<OrderType>()" disabled class="form-control"></select>
                <span asp-validation-for="OrderType" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TradeStatus">Status</label>
                <select asp-for="TradeStatus" asp-items="Html.GetEnumSelectList<TradeStatus>()" disabled class="form-control"></select>
                <span asp-validation-for="TradeStatus" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity">Size</label>
                <input asp-for="Quantity" disabled class=" form-control">
                <span asp-validation-for="Quantity" class="form-text text-danger"></span>
            </div>

        </form>
    </div>
</div>

<div>
    <a href="/trades/DeleteConfirmed/@Model.Id" class="btn btn-danger">Confirm delete</a>
    <a href="/trades/AllTrades" class="btn btn-outline-dark">Back</a>

</div>
